#include "ExternalInterrupt.h"
uint8 flag =0;

ISR(INT1_vect)
{
	if(flag==0)
	{
		SET_BIT(PORTB,PB1);
		CLEAR_BIT(PORTB,PB0);
		flag=1;
	}
	else if(flag==1)
		{
			SET_BIT(PORTB,PB0);
			CLEAR_BIT(PORTB,PB1);
			flag=0;
		}
}

void ExternalInterrupt_VidInit()
{
	MCUCR=(1<<ISC11)|(ISC10);
	GICR =(1<<INT1);
	sei();
}
